@model IEnumerable<AlbumCollectionMastery.Models.Album>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main">
        <h1>The Albums</h1>
        <ul class="albums">
            @foreach (var album in Model)
            {
                <li>
                    <a href="/Album/Details/@album.AlbumId"><h3>@album.AlbumTitle</h3></a>
                </li>
            }
        </ul>
    </div>
    @*<a href="/Album">Album List </a>*@
</body>
</html>

