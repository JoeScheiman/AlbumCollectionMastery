@model AlbumCollectionMastery.Models.Song

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Add a Song to @Model.AlbumId</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SongTitle" class="control-label"></label>
                    <input asp-for="SongTitle" class="form-control" />
                    <span asp-validation-for="SongTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SongArtist" class="control-label"></label>
                    <input asp-for="SongArtist" class="form-control" />
                    <span asp-validation-for="SongArtist" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="AlbumId" class="form-control" placeholder="@Model.AlbumId">
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @*<a asp-action="Index">Back to List</a>*@
        <a href="/Album/Details/@Model.AlbumId">Back to List</a>
    </div>

</body>
</html>
